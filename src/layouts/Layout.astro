---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	<body class="bg-neutral-900">
		<slot />
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700");

	@font-face {
		font-family: "Def Sans";
		src: url(../assets/DefSans-Regular.woff2) format("woff2");
	}

	body {
		font-family: "Def Sans";
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	main {
		flex: 1;
		display: flex;
		flex-direction: column;
		padding: 5rem 2rem;
		width: 100%;
		max-width: 64rem;
		margin: 0 auto;
		box-sizing: border-box;
		text-align: left;
	}

	@media (min-width: 767px) {
		main {
			padding: 8rem 2rem;
		}
	}

	.serif {
		font-family: "Lora", system-ui !important;
		font-style: italic;
	}
</style>
